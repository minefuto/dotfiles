{
  "title": "Citrix WorkSpace toggle",
  "rules": [
    {
      "description": "option to Space + Ctrl",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": { "mandatory": "left_control" }
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [ "^com\\.citrix\\.XenAppViewer" ]
            }
          ],
          "to": [{ "key_code": "left_option" }]
        }
      ]
    }
  ]
}
